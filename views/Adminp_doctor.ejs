<% layout('panel') -%>
<div class="col-md-3">
    <div class="card card-primary">
        <div class="card-body">
            <img style="margin-bottom: 20px;  width: 100%; position: center;" src="/profiles/<%= doctor.Photo %>" alt="">
            <form method="post" action="/admin/Docprofile/<%= doctor.id %>/delete">
                <input hidden type="text" name="delete" value="yes">
                <button class="btn btn-block btn-danger">DELETE!!</button>
            </form>
        </div>
    </div>
</div>

<div class="col-md-9">
    <div class="card card-primary">
        <div class="card-body">
            <!-- /.tab-pane -->
            <label>Name: </label>
            <p><%= doctor.Name %></p>
            <br>
            <label>Phone: </label>
            <p><%= doctor.Phone %></p>
            <br>
            <label>Email: </label>
            <p><%= doctor.Email %></p>
            <br>
            <form class="form-horizontal" method="POST">
                <div class="form-group row">
                    <label for="inputName" class="col-sm-2 col-form-label">Salary</label>
                    <div class="col-sm-10">
                        <input type="text" name="name" value="<%= doctor.Salary %>" class="form-control" id="inputName"
                               placeholder="Name">
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" value="yes" name="head" id="remember_me">
                            <label for="head">
                                Head
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        <label class="font-weight-bold" for="treatment">Department</label>
                        <select name="depid" id="depid" class="form-control">
                            <option value="1">Dental Surgery</option>
                            <option value="2">Dental Implants</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="offset-md-12 col-sm-10">
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- /.tab-pane -->
