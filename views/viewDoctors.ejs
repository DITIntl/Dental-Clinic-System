<% layout('panel') -%>

<div class="card card-solid">
    <div class="card-body pb-0">
        <div class="row d-flex align-items-stretch">
            <% Doctors.forEach(doctor =>  { %>
                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                    <div class="card bg-light">
                        <div class="card-header text-muted border-bottom-0">
                            <%= doctor.Name %>
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b></b></h2>
                                    <p class="text-muted text-sm"><b>Title: </b> <%= doctor.Title %> </p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> <%= doctor.Phone %></li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    <img src="/profiles/default.png " alt="" class="img-circle img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                <a href="#" class="btn btn-sm btn-primary">
                                    <i class="fas fa-user"></i> Book now
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
          <%  });%>
        </div>
    </div>
    <!-- /.card-body -->

    <!-- /.card-footer -->
</div>
